<a href="{{ path('mariage_lift_sharing') }}"><button class="bouton_ajout btn btn-primary col-md-offset-6 col-md-3">Retour</button></a>
<div class="row">
    <form method="post" action="{{ path('mariage_lift_sharing_add') }}" class="form-horizontal col-md-offset-3 col-md-6">
        <div class="form-group">
            <input type="text" class="form-control" name="nom" placeholder="Nom et prénom" required />
        </div>
        <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="E-mail" required />
        </div>
        <div class="form-group">
            <input type="tel" class="form-control col-md-6" name="tel" placeholder="Tel (facultatif)" />
        </div>
        <div class="form-group">
            Trajet :
            <div class="radio-inline">
                <label><input type="radio" name="type_trajet" value="aller">aller</label>
            </div>
            <div class="radio-inline">
                <label><input type="radio" name="type_trajet" value="retour">retour</label>
            </div>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="origine" placeholder="Trajet vers..." required />
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="date" placeholder="Date de départ prévue" required/>
        </div>
        <div class="form-group">
            <input type="number" class="form-control" name="nb_places" min="0" placeholder="Nombre de places disponibles" required/>
        </div>
        <button class="btn btn-success" name="validation_ajout" type="submit">Valider</button>
    </form>
</div>